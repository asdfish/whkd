how does this cause a segfault

std::function<bool (HWND)> handles_filter_winapi(BOOL(*predicate)(HWND)) {
  return [&predicate](HWND handle) -> bool {
    return predicate(handle) == TRUE;
  };
}

int main(void) {
  HWND handle = get_handle();

  auto filter = handles_filter_winapi(IsWindow);

  std::cout << filter(handle); // segfault
}
